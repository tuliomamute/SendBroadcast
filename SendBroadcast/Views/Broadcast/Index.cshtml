@model IEnumerable<SendBroadcast.Models.BotApplication>

@{
    ViewBag.Title = "Início";
}

<h2>Início - Broadcasts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BotName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BotIdentifier)
        </th>
        <th>Ação</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BotIdentifier)
            </td>
            <td>
                @Html.ActionLink("Criar Broadcast", "Create", "Broadcast", item, null)
            </td>
        </tr>
    }

</table>
